{{>layouts/header}}
<h1>신청 리스트</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/orders/save" role="button" class="btn btn-primary">글 등록</a>
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#orders}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/orders/update/{{id}}">{{title}}</a></td>
                <td>{{userName}}</td>
                <td>{{content}}</td>
            </tr>
        {{/orders}}
        </tbody>
    </table>
</div>
{{>layouts/footer}}
